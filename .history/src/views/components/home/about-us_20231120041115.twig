<section class="mb-12 s-block">
	<div class="container flex flex-col items-center justify-center store-features">
		<div class="grid grid-cols-4 gap-10 sm:gap-14 grid-feattures-about">
			{% for link in component.about_us %}
				<div class="flex flex-col items-center justify-start lg:justify-between">
					<div class="flex items-center justify-center w-48 h-48 p-10 mb-8 bg-gray-800 rounded-full sm:h-28 sm:w-28 sm:p-5 image">
						<img class="object-contain" src="{{link.image}}"/>
					</div>
					<h3 class="mb-3 font-bold text-gray-800 lg:text-3xl">{{ link.number }}</h3>
					<h3 class="mb-3 font-bold text-gray-800 lg:text-3xl">{{ link.title }}</h3>
					<p class="text-center text-gray-800 lg:text-3xl">{{ link.subtitle }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
