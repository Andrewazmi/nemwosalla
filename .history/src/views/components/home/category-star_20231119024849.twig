<section class="mt-10 s-block s-block--categories">
	<div class="container px-4 category">
		<div class="flex flex-col items-center justify-center mb-8 text-center">
			<h1 class="mb-2 font-extrabold text-gray-900 underline lg:text-5xl underline-offset-8">{{component.title}}</h1>
			<div class="line"></div>
		</div>
		<div class="flex items-center justify-center w-full m-auto">
			<div class="grid w-full grid-cols-4 gap-10">
				{% for link in component.category_star %}
					<div class="swiper-slide slide--one-sixth cat-hight">
						<span class="hidden category-value">{{ link.category_name.value[0]|json_encode() }}</span>
						<a class="flex flex-col items-center justify-center api-set-category" data-emergence="hidden" href="">
							<div class="flex items-center justify-center p-10 mb-2 rounded-full w-72 h-72 image">
								<img class="object-cover object-center w-full h-full rounded-full image-catetgory" src="{{link.image}}"/>
							</div>
							<h4 class="text-2xl font-semibold category-name"></h4>
							<span class="text-lg text-gray-500 all-category-belong-product"></span>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
